<%= form_for @event, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rules, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :rules, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prize, :class => 'control-label col-md-2' %> 
    <div class="col-md-10">
      <%= f.text_field :prize, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :deadline, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_field :deadline, :class => 'text-field form-control', value: 7.days.from_now.to_date %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :category, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
